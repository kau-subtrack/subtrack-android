<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.subtrack.ui.view.LoginFragment"
        android:label="로그인">
        <action
            android:id="@+id/action_loginFragment_to_ownerHomeFragment"
            app:destination="@id/ownerHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/ownerHomeFragment"
        android:name="com.example.subtrack.ui.view.OwnerHomeFragment"
        android:label="자영업자 홈" >
        <action
            android:id="@+id/action_ownerHomeFragment_to_onwerpointFragment"
            app:destination="@id/onwerpointFragment" />
        <action
            android:id="@+id/action_ownerHomeFragment_to_ownersendFragment"
            app:destination="@id/ownersendFragment" />
        <action
            android:id="@+id/action_ownerHomeFragment_to_ownermyFragment"
            app:destination="@id/ownermyFragment" />
    </fragment>

    <fragment
        android:id="@+id/ownersendFragment"
        android:name="com.example.subtrack.ui.view.OwnerSendFragment"
        android:label="발송" />

    <fragment
        android:id="@+id/onwerpointFragment"
        android:name="com.example.subtrack.ui.view.OwnerPointFragment"
        android:label="구독/포인트" />

    <fragment
        android:id="@+id/ownermyFragment"
        android:name="com.example.subtrack.ui.view.OwnerMyFragment"
        android:label="MY" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.subtrack.ui.view.RegisterFragment"
        android:label="회원가입" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
